<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:paddingRight="10dip">
	<LinearLayout android:layout_width="55dip"
		android:layout_height="50dip" android:paddingTop="5dip"
		android:paddingBottom="5dip" android:layout_marginRight="10dip">
		<ToggleButton android:id="@+id/accountStatus"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:textSize="8dip" android:focusable="false" 
			android:textOn="@string/on" android:textOff="@string/off" />
	</LinearLayout>
	<TextView android:id="@+id/accountListAid"
		android:layout_width="135dip" android:layout_height="50dip"
		android:gravity="center_vertical" />
	<TextView android:id="@+id/accountListCr"
		android:layout_width="fill_parent" android:layout_height="50dip"
		android:gravity="center_vertical|right" />
</LinearLayout>