<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingRight="10dip">
		<TextView android:text="@string/no" android:layout_width="50dip"
			android:layout_height="wrap_content" />
		<TextView android:text="@string/account"
			android:layout_width="150dip" android:layout_height="wrap_content" />
		<TextView android:text="@string/credit" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="right" />
	</LinearLayout>
	
	<View android:layout_width="fill_parent" android:layout_height="1dip"
		android:background="@android:color/background_light" />

	<ListView android:id="@+id/android:list"
		android:layout_height="fill_parent" android:layout_width="fill_parent" />
</LinearLayout>